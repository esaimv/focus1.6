<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tema1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.perrito.focus15.tema1">


    <android.support.v7.widget.CardView
        android:id="@+id/ejercicio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ejercicio1"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 2"
            android:textColor="#AA109D"
            android:padding="20dp"
            android:textStyle="normal|bold" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/ejercicio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/ejercicio2"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 3"
            android:textColor="#AA109D"
            android:padding="20dp"
            android:textStyle="normal|bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/comenzar"
        android:background="@color/colorPrimary"
        app:cardBackgroundColor="?attr/colorPrimary"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Comenzar ejercicios"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:elevation="0dp"
            android:textAlignment="textEnd"
            android:layout_alignBottom="@+id/comenzar"
            android:layout_alignStart="@+id/ejercicio1"
            android:layout_marginStart="260dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:id="@+id/imageView3" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ejercicio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_below="@+id/comenzar"
        android:layout_alignStart="@+id/comenzar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ejercicio 1"
            android:textColor="#AA109D"
            android:padding="20dp"
            android:textStyle="normal|bold" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
