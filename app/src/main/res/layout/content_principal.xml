<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.perrito.focus15.principalActivity"
    tools:showIn="@layout/activity_principal"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp"
        android:layout_height="100dp"
        android:background="#F24488">
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/card1"
            app:cardBackgroundColor="#F24488">


            <TextView
                android:layout_width="384dp"
                android:layout_height="match_parent"
                android:text="Selecciona un nivel para comenzar"
                android:textSize="13sp"
                android:textColor="@color/cardview_light_background"
                android:id="@+id/textView2"
                android:paddingTop="30px"
                android:paddingLeft="60px"
                android:paddingRight="10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingTop="320dp"
            android:layout_marginTop="50dp"
            android:elevation="1dp"
            android:id="@+id/tema1">

            <TextView
                android:layout_width="349dp"
                android:layout_height="match_parent"
                android:text="Nivel de logro I"
                android:textSize="20sp"
                android:textColor="#26231C"
                android:id="@+id/textView6"
                android:paddingTop="30px"
                android:paddingLeft="60px"
                android:paddingRight="5px"
                android:layout_margin="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingTop="320dp"
            android:layout_marginTop="160dp"
            android:elevation="1dp"
            android:id="@+id/tema2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nivel de logro II"
                android:textSize="20sp"
                android:textColor="#26231C"
                android:id="@+id/textView3"
                android:paddingTop="50px"
                android:paddingLeft="60px"
                android:paddingRight="10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:paddingTop="320dp"
            android:layout_marginTop="270dp"
            android:elevation="1dp"
            android:id="@+id/tema3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nivel de logro III"
                android:textSize="20sp"
                android:textColor="#26231C"
                android:id="@+id/textView4"
                android:paddingTop="50px"
                android:paddingLeft="60px"
                android:paddingRight="10px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>
